<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".view.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/avatar"
                       android:layout_centerVertical="true"
            />

            <ImageView android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:src="@drawable/logo"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true"
                       android:translationX="30dp"
            />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:weightSum="1"
            android:padding="5dp"
            android:layout_height="75dp">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:id="@+id/ivHome"/>
            <TextView
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:translationY="-10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ivHome"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:id="@+id/ivHome1"/>
            <TextView
                    android:text="Home"
                    android:translationY="-10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ivHome1"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:id="@+id/ivHome2"/>
            <TextView
                    android:text="Home"
                    android:translationY="-10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ivHome2"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:id="@+id/ivHome4"/>
            <TextView
                    android:text="Home"
                    android:translationY="-10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ivHome4"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/home"
                    android:id="@+id/ivHome3"/>
            <TextView
                    android:text="Home"
                    android:translationY="-10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ivHome3"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            android:layout_above="@+id/bottomBar"
            android:layout_below="@+id/toolbar"/>
</RelativeLayout>